@model int

@if (Model < 100)
{
    <section class="sidebar layer-style open progress-account">
        <header><h3> تکمیل حساب کاربری </h3><i class="zmdi zmdi-chevron-down"></i></header>
        <div class="inner">
            <div class="complete-progress">
                <div id="progress" data-range="@((double)Model / 100)">
                    <canvas width="100" height="100" style="height: 80px; width: 80px;"></canvas>
                    <span>@Model%</span> </div>
            </div>

            <div class="detail">
                <span> @(100 - Model)% تا تکمیل حساب کاربری  </span>
            </div>
            @if (ViewData["UserName"] == null)
            {
                <div class="detail">
                    <span>لطفا نام خود را وارد نمایید- </span>
                </div>
            }
            @if (ViewData["Address"] == null)
            {
                <div class="detail">
                    <span>لطفا ادرس خود را وارد نمایید- </span>
                </div>
            }           
            @if (ViewData["ForMe"] == null)
            {
                <div class="detail">
                    <span>لطفا درباره خودتان توضیحی بدهید- </span>
                </div>
            }

        </div>
    </section>
}
