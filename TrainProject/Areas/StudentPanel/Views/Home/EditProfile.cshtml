@model Domain.Users.MyUser;
@using Application.Convert;

<!-- Main content START -->
<div class="col-xl-9">
    <!-- Edit profile START -->
    <div class="card bg-transparent border rounded-3">
        <!-- Card header -->
        <div class="card-header bg-transparent border-bottom">
            <h3 class="card-header-title mb-0 ff-vb fs-5">ویرایش پروفایل</h3>
            <span class="text-body fw-light">اخرین ویرایش در  </span>
            <span class="h6">@Model.ModifiedDate.Toshamsi()</span>
        </div>
        <!-- Card body START -->
        <div class="card-body">
            <!-- Form -->
            <form asp-action="EditProfile" class="row g-4" method="post" enctype="multipart/form-data">

                <!-- Profile picture -->
                <div class="col-12 justify-content-center align-items-center">
                    <label class="form-label">تصویر</label>
                    <input type="file" id="imgup" name="imgup" />
                    <img id="pimg" src="/Avatars/@Model.Avatar" style="max-width:150px" />
                </div>

                <!-- Username -->
                <div class="col-md-6">
                    <label class="form-label">نام کاربری</label>
                    <div class="input-group">
                        <span class="input-group-text"></span>
                        <input asp-for="UserName" type="text" class="form-control">
                    </div>
                </div>


                <!-- Location -->
                <div class="col-md-6">
                    <label class="form-label">آدرس</label>
                    <input asp-for="Address" class="form-control" type="text">
                </div>

                <div class="col-md-6">
                    <label class="form-label">درباره من</label>
                    <input asp-for="ForMe" class="form-control" type="text">
                </div>





                <!-- Save button -->
                <div class="d-sm-flex justify-content-end">
                    <button type="submit" class="btn btn-primary mb-0">ویرایش</button>
                </div>

            </form>
        </div>


        @if (ViewBag.edit != null)
        {
            <div class="alert alert-success">
                ویرایش با موفقیت انجام شد
            </div>

        }
        <!-- Card body END -->
    </div>
    <!-- Edit profile END -->




</div>

