@model Application.ViewModel.CategoryFilterVM;
@using Application.Convert
<!-- Page main content START -->
<div class="page-content-wrapper border">

	<!-- Title -->
	<div class="row mb-3">
		<div class="col-12 d-sm-flex justify-content-between align-items-center">
			<h1 class="h3 mb-2 mb-sm-0 fs-5">@Model.category <span class="badge bg-orange bg-opacity-10 text-orange">@Model.countcategoty</span></h1>
		</div>
	</div>

	<!-- Card START -->
	<div class="card bg-transparent border">

		<!-- Card header START -->
		<div class="card-header bg-light border-bottom">
			<!-- Search and select START -->
			<div class="row g-3 align-items-center justify-content-between">

				
				
		</div>
		<!-- Card header END -->
		<!-- Card body START -->
		<div class="card-body">
			<!-- Course table START -->
			<div class="table-responsive border-0 rounded-3">
				<!-- Table START -->
				<table class="table table-dark-gray align-middle p-4 mb-0 table-hover">
					<!-- Table head -->
					<thead>
						<tr>
							<th scope="col" class="border-0 rounded-start">نام دوره</th>
							<th scope="col" class="border-0">تاریخ انتشار</th>
							<th scope="col" class="border-0">سطح</th>
							
						</tr>
					</thead>


					
					<!-- Table body START -->
					<tbody>
						@foreach (var MyProducts in Model.products)
						{
							<tr>
								<!-- Table data -->
								<td>
									<div class="d-flex align-items-center position-relative">
										
										<!-- Title -->
										<h6 class="table-responsive-title mb-0 ms-2">
											<a href="#" class="stretched-link">@MyProducts.ProductName</a>
										</h6>
									</div>
								</td>

								<!-- Table data -->
								<td>
									<div class="d-flex align-items-center">
										
										<!-- Info -->
										<div class="ms-2">
											<h6 class="mb-0 fw-light">@Dataconvert.Toshamsi(MyProducts.Createdate)</h6>
										</div>
									</div>
								</td>
								

								<td>
									<div class="d-flex align-items-center">

										<!-- Info -->
										<div class="ms-2">
											<h6 class="mb-0 fw-light">@MyProducts.Level.Description</h6>
										</div>
									</div>
								</td>
								
								
							</tr>





						}
						<!-- Table row -->
						


					</tbody>
					<!-- Table body END -->
				</table>
				<!-- Table END -->
			</div>
			<!-- Course table END -->
		</div>
		<!-- Card body END -->
		@{
			int count = ViewBag.CategoryCount;
			int pageId = ViewBag.PageId;
			int take = ViewBag.Take;
			double pageCount = ViewBag.pageCount;
			

		}
		<!-- Card body END -->
		<div class="card-footer bg-transparent pt-0">

			@if (pageCount >= 1)
			{
				<!-- Pagination START -->
				<div class="d-sm-flex justify-content-sm-between align-items-sm-center">
					<!-- Content -->
					<!-- Pagination -->
					<nav class="d-flex justify-content-center mb-0" aria-label="navigation">
						<ul class="pagination pagination-sm pagination-primary-soft d-inline-block d-md-flex rounded mb-0">
							@for (int i = 1; i <= pageCount + 1; i++)
							{

								<li class="page-item mb-0"><a class="page-link" href="/PanelAdmin/cource/ShowCategoryWithFilter?pageid=@i&categoryid=@Model.categoryid" style="@((i==pageId)?"background-color: lightgoldenrodyellow;":"")">@i</a></li>
							}


						</ul>
					</nav>
				</div>
				<!-- Pagination END -->
			}

		</div>
		
		
		<!-- Card footer END -->
	</div>
	<!-- Card END -->
</div>